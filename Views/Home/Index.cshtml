@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <!-- Hero Section -->
    <div class="row">
        <div class="col-12">
            <div class="hero-banner">
                <img class="banner-img img-fluid" src="~/images/Banner.jpg" alt="Summer Sale - Up to 50% Off!" />
                <div class="hero-text pt-5">
                    <h1>Summer Sale - Up to 50% Off!</h1>
                    <a href="/Products" class="btn btn-primary">Shop Now</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Featured Categories -->
    <div class="row text-center my-5">
        <div class="col-12">
            <h3 class="section-title">SHOP BY CATEGORY</h3>
        </div>
        <div class="col-6 col-sm-4 col-md-3 my-3">
            <div class="category-card">
                <img src="~/images/shirts.png" alt="Men's Fashion" class="category-img img-fluid" />
                <!-- <div class="category-label">Men's Fashion</div> -->
                <a href="/Products" class="btn btn-primary">Men's Fashion</a>

            </div>
        </div>
        <div class="col-6 col-sm-4 col-md-3 my-3">
            <div class="category-card">
                <img src="~/images/womendress.png" alt="Women's Fashion" class="category-img img-fluid" />
                <a href="/Products" class="btn btn-primary">Women's Fashion</a>

            </div>
        </div>
        <div class="col-6 col-sm-4 col-md-3 my-3">
            <div class="category-card">
                <img src="~/images/kidswear.png" alt="Kids' Fashion" class="category-img img-fluid" />
                <a href="/Products" class="btn btn-primary">Kid's Fashion</a>

            </div>
        </div>
        <div class="col-6 col-sm-4 col-md-3 my-3">
            <div class="category-card">
                <img src="~/images/footwear.png" alt="Footwear" class="category-img img-fluid" />
                <a href="/Products" class="btn btn-primary">Footwear</a>

                
            </div>
        </div>
    </div>

    <!-- Product Highlights -->
    <div class="row text-center my-5">
        <div class="col-12">
            <h3 class="section-title">TRENDING NOW</h3>
        </div>
        <div class="col-6 col-md-3 my-3">
            <div class="product-card">
                <img src="~/images/women shirrt.jpg" alt="Women Shirt" class="product-img img-fluid" />
                <div class="product-info">
                    <h5>Women Shirt</h5>
                    <p>$29.99</p>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3 my-3">
            <div class="product-card">
                <img src="~/images/kids suit.jpg" alt="Kids Suit" class="product-img img-fluid" />
                <div class="product-info">
                    <h5>Kids Suit</h5>
                    <p>$39.99</p>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3 my-3">
            <div class="product-card">
                <img src="~/images/men shoes.jpg" alt="Men Shoes" class="product-img img-fluid" />
                <div class="product-info">
                    <h5>Men Shoes</h5>
                    <p>$59.99</p>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3 my-3">
            <div class="product-card">
                <img src="~/images/watches.jpg" alt="Watches" class="product-img img-fluid" />
                <div class="product-info">
                    <h5>Watches</h5>
                    <p>$99.99</p>
                </div>
            </div>
        </div>
        <!-- Add more products as needed -->
    </div>


    <!-- Promotions Section -->
    <div class="row text-center my-5">
        <div class="col-12">
            <div class="promo-banner">
                <img class="promo-img img-fluid" src="~/images/shipping.jpg" alt="Free Shipping" />
                <div class="promo-text pt-5">
                    <h2>Free Shipping on Orders Over $50!</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- About Us section -->
    <div class="row text-center my-5" id="about-us">
        <div class="col-12">
            <h3 class="section-title">ABOUT US</h3>
        </div>
        <div class="col-md-6">
            <img class="img-fluid" style="height:200px" src="~/images/MainLos.png" alt="About Us Image" />
        </div>
        <div class="col-md-6">
            <p>We are a leading online retailer, passionate about delivering the best shopping experience. With a vast selection of products, we aim to meet the diverse needs of our customers. Our commitment to quality and customer satisfaction has made us a trusted name in the industry.</p>
            <p>Founded with a mission to make shopping accessible and enjoyable, we continually strive to innovate and improve. Whether you're looking for the latest trends or everyday essentials, we're here to help you find what you need, at prices you'll love.</p>
        </div>
    </div>

    <!-- Mission, Values, and Target section -->
    <div class="row text-center my-5" id=" info">
        <div class="col-md-4">
            <h4 class="section-title">OUR MISSION</h4>
            <p>Our mission is to deliver an exceptional shopping experience by providing great value and convenience, empowering customers with a wide variety of products.</p>
        </div>
        <div class="col-md-4">
            <h4 class="section-title">OUR VALUES</h4>
            <p>We are committed to integrity, customer satisfaction, and innovation. We believe in building trust through transparent and ethical business practices.</p>
        </div>
        <div class="col-md-4">
            <h4 class="section-title">OUR TARGET</h4>
            <p>We aim to serve a diverse customer base, from fashion-forward individuals to families looking for everyday essentials, ensuring everyone finds something they love.</p>
        </div>
    </div>


    <!-- Contact Us Section -->
    <div class="row text-center my-5" id="contact-us">
        <div class="col-12">
            <h3 class="section-title">CONTACT US</h3>
            <p>If you have any questions or need assistance, feel free to contact us. We're here to help!</p>
            <p>Email: contact@mart.com | Phone: (123) 456-7890</p>
        </div>
    </div> 
</div>
