@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<div class="navbar-collapse collapse justify-content-end">
    <ul class="navbar-nav align-items-center">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-white" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user-circle"></i> Welcome @UserManager.GetUserName(User)!
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                    <li>
                        <a class="dropdown-item" asp-controller="Home" asp-action="Index">Profile</a>
                    </li>
                    <li>
                        <form asp-controller="Home" asp-action="Logout" method="post" class="form-inline">
                            <button type="submit" class="dropdown-item btn-logout">Logout</button>
                        </form>
                    </li>
                </ul>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Home" asp-action="Register">
                    <i class="fas fa-user-plus"></i> Register
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Home" asp-action="Login">
                    <i class="fas fa-sign-in-alt"></i> Login
                </a>
            </li>
        }
    </ul>
</div>

<style>
    .navbar-nav .nav-link {
        font-size: 1rem;
        padding: 10px 15px;
        transition: all 0.3s ease;
    }

        .navbar-nav .nav-link:hover {
            background-color: #007bff;
            color: #fff;
            border-radius: 5px;
        }

    .btn-logout {
        background-color: transparent;
        border: none;
        color: #333;
        width: 100%;
        text-align: left;
        padding: 5px 20px;
    }

        .btn-logout:hover {
            background-color: #f8f9fa;
        }

    .dropdown-menu {
        border-radius: 5px;
        padding: 10px 0;
    }

    .dropdown-item {
        padding: 10px 20px;
        transition: all 0.3s ease;
    }

        .dropdown-item:hover {
            background-color: #007bff;
            color: #fff;
        }

    .fas {
        margin-right: 5px;
    }
</style>
